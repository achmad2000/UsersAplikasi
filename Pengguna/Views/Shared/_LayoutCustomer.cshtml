@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var username = HttpContextAccessor.HttpContext.Session.GetString("Username") ?? "Guest";
    var profileImage = HttpContextAccessor.HttpContext.Session.GetString("ProfileImagePath") ?? "~/images/profile/default-profile.png";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Home</title>

    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-icons.css" />

    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>

    <nav class="navbar navbar-dark bg-primary sticky-top">
        <div class="container-fluid">
            <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu">
                <i class="bi bi-three-dots-vertical" style="font-size: 1.5rem; color: white;"></i>
            </button>

            <a class="navbar-brand" href="#">Home Service</a>
            <div class="d-flex align-items-center ms-auto">
                <div class="dropdown">
                    <a class="nav-link dropdown-toggle text-white d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                        <img src="@Url.Content(profileImage)"
                             alt="Foto Profil"
                             class="rounded-circle me-2 shadow"
                             style="width: 35px; height: 35px; object-fit: cover; border: 2px solid white;">
                        <span>@username</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item disabled">Online</a></li>
                        <li><a class="dropdown-item" asp-controller="Customer" asp-action="Profile">Profile</a></li>
                        <li><a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="offcanvas offcanvas-start bg-primary text-white" tabindex="-1" id="sidebarMenu" aria-labelledby="sidebarMenuLabel" style="width: 220px;">
        <div class="offcanvas-header">
            <h3 class="offcanvas-title" id="sidebarMenuLabel">Home Service</h3>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white @(ViewData["ActivePage"] as string == "Index" ? "active" : "")"
                       asp-controller="Customer" asp-action="Index">
                        <i class="bi bi-house-door-fill"></i> Dashboard
                    </a>
                </li>
               
                <li class="nav-item">
                    <a class="nav-link text-white @(ViewData["ActivePage"] as string == "Order" ? "active" : "")"
                       asp-controller="Customer" asp-action="Order">
                        <i class="bi bi-tools"></i> Order
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white @(ViewData["ActivePage"] as string == "DaftarTagihan" ? "active" : "")"
                       asp-controller="Customer" asp-action="DaftarTagihan">
                        <i class="bi bi-receipt"></i> Daftar Tagihan
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white @(ViewData["ActivePage"] as string == "RiwayatService" ? "active" : "")"
                       asp-controller="Customer" asp-action="RiwayatService">
                        <i class="bi bi-clock-history"></i> Riwayat Servis
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white @(ViewData["ActivePage"] as string == "Garansi" ? "active" : "")"
                       asp-controller="Customer" asp-action="Garansi">
                        <i class="bi bi-clock-history"></i> Garansi
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <main class="container-fluid p-4">
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/sweetalert2.js"></script>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>

    <script>
        // 1. Setup Koneksi
        var connection = new signalR.HubConnectionBuilder()
            .withUrl("/JobOrderHub")
            .build();

        // 2. Pasang Telinga (Listener)
        connection.on("RedirectToRating", function (idArsip) {
            console.warn("COMMAND DITERIMA! ID: " + idArsip); // Pakai warn biar warna kuning mencolok
            window.location.href = "/Customer/BeriRating/" + idArsip;
        });

        // 3. Mulai Koneksi & Join Group
        connection.start().then(function () {
            console.log("SignalR Connected (Status: " + connection.state + ")");

            // Ambil username
            var user = "@Context.Session.GetString("Username")";
            console.log("Current User Session: '" + user + "'");

            if (user && user !== "Guest" && user !== "") {
                // Log sebelum join
                console.log("Mencoba join group sebagai: " + user.toLowerCase());

                // Join dengan huruf kecil
                connection.invoke("JoinCustomerGroup", user.toLowerCase())
                    .then(function() {
                         console.log("✅ SUKSES JOIN GROUP: Customer_" + user.toLowerCase());
                    })
                    .catch(function (err) {
                        console.error("❌ GAGAL JOIN GROUP: " + err.toString());
                    });
            } else {
                console.error("❌ TIDAK BISA JOIN: Session Username Kosong/Guest");
            }
        }).catch(function (err) {
            console.error("❌ GAGAL KONEKSI SIGNALR: " + err.toString());
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>