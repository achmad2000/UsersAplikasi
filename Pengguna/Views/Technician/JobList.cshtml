@model IEnumerable<Pengguna.Models.WaitingResponOrder>

@{
    ViewData["Title"] = "Report Order";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center rounded-top-3">
            <h4 class="mb-0">Daftar Job Tersedia</h4>
        </div>

        <div class="card-body p-4" style="background-color: #f9f9ff;">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered align-middle text-center mb-0">
                        <thead class="table-primary">
                            <tr>
                                <th>Nomor Service</th>
                                <th>Nama Customer</th>
                                <th>Item</th>
                                <th>Alamat</th>
                                <th>Nomor WhatsApp</th>
                                <th>Status</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                // 1. DETEKSI APAKAH INI ORDER GARANSI?
                                bool isGaransi = order.NomorService.StartsWith("G-");

                                <tr class="@(isGaransi ? "table-danger" : "")">
                                    <td>
                                        <div class="fw-bold">@order.NomorService</div>

                                        @if (isGaransi)
                                        {
                                            <span class="badge bg-danger mt-1">
                                                <i class="bi bi-shield-exclamation"></i> KLAIM GARANSI
                                            </span>
                                        }
                                    </td>

                                    <td>@order.NamaCustomer</td>

                                    <td>
                                        @order.ItemService
                                        @if (isGaransi)
                                        {
                                            <div class="small text-danger fst-italic mt-1">(Perbaikan Ulang / Gratis)</div>
                                        }
                                    </td>

                                    <td>@order.Alamat</td>
                                    <td>@order.NoWA</td>

                                    <td>
                                        @if (order.Status == "Menunggu Teknisi")
                                        {
                                            <span class="badge bg-warning text-dark">@order.Status</span>
                                        }
                                        else if (order.Status == "Diterima Teknisi")
                                        {
                                            <span class="badge bg-primary">@order.Status</span>
                                        }
                                        else if (order.Status == "Menunggu Persetujuan Cancel")
                                        {
                                            <span class="badge bg-secondary">@order.Status</span>
                                        }
                                        else if (order.Status == "Dibatalkan")
                                        {
                                            <span class="badge bg-danger">@order.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">@order.Status</span>
                                        }
                                    </td>

                                    <td>
                                        @* --- TOMBOL AMBIL JOB --- *@
                                        @if (order.Status == "Menunggu Teknisi")
                                        {
                                            <form asp-action="TakeJob" asp-controller="Technician" method="post"
                                                  onsubmit="return confirm('@(isGaransi ? "Ambil Job Garansi ini? (Ingat: Tidak ada tagihan ke customer)" : "Ambil job ini?")');" class="d-inline">
                                                <input type="hidden" name="id" value="@order.Id" />

                                                <button type="submit" class="btn @(isGaransi ? "btn-danger" : "btn-success") btn-sm">
                                                    <i class="bi bi-hand-index-thumb"></i> @(isGaransi ? "Ambil Job Garansi" : "Ambil Job")
                                                </button>
                                            </form>
                                        }

                                        @* --- TOMBOL TERIMA / TOLAK CANCEL (Sama) --- *@
                                        @if (order.Status == "Menunggu Persetujuan Cancel")
                                        {
                                            <form asp-action="ApproveCancel" asp-controller="Technician" method="post" class="d-inline"
                                                  onsubmit="return confirm('Terima pembatalan order ini?');">
                                                <input type="hidden" name="id" value="@order.Id" />
                                                <button type="submit" class="btn btn-outline-success btn-sm">
                                                    <i class="bi bi-check-circle"></i> Setuju
                                                </button>
                                            </form>

                                            <form asp-action="RejectCancel" asp-controller="Technician" method="post" class="d-inline"
                                                  onsubmit="return confirm('Tolak pembatalan order ini?');">
                                                <input type="hidden" name="id" value="@order.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-x-circle"></i> Tolak
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4 text-muted">
                    <i class="bi bi-info-circle"></i> Belum ada job yang tersedia saat ini.
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/signalr/dist/browser/signalr.js"></script>

    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/JobOrderHub") 
            .build();
        connection.start().then(function () {
            connection.invoke("JoinTechnicianGroup").catch(function (err) {
                return console.error(err.toString());
            });
            console.log("SignalR Terhubung (Teknisi)");
        }).catch(function (err) {
            return console.error(err.toString());
        });
        connection.on("UpdateReceived", function () {
            console.log("Notifikasi job baru diterima! Me-refresh halaman...");
    location.reload();
        });
    </script>
}