@model IEnumerable<Pengguna.Models.ServiceLog>
@{
    ViewData["Title"] = "Antrean Validasi Pembayaran";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3><i class="bi bi-wallet2"></i> Antrean Validasi Pembayaran</h3>
        <a href="@Url.Action("ValidasiPembayaran")" class="btn btn-outline-primary btn-sm">
            <i class="bi bi-arrow-clockwise"></i> Refresh Data
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-success text-center mt-4 shadow-sm">
            <h5><i class="bi bi-check-circle"></i> Tidak ada pembayaran yang perlu divalidasi.</h5>
            <p class="mb-0">Semua pekerjaan teknisi Anda sudah lunas atau belum selesai.</p>
        </div>
    }
    else
    {
        <div class="row mt-4">
            @foreach (var item in Model)
            {
                // 1. CEK APAKAH INI GARANSI?
                bool isGaransi = item.WaitingResponOrder.NomorService.StartsWith("G-");

                // 2. TENTUKAN WARNA CARD
                string borderClass = "border-warning";
                string headerClass = "bg-warning text-dark";

                if (isGaransi)
                {
                    // Merah untuk Garansi
                    borderClass = "border-danger";
                    headerClass = "bg-danger text-white";
                }
                else if (item.StatusPembayaran == "Cash")
                {
                    borderClass = "border-success";
                    headerClass = "bg-success text-white";
                }
                else if (item.StatusPembayaran == "Transfer")
                {
                    borderClass = "border-primary";
                    headerClass = "bg-primary text-white";
                }

                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100 @borderClass">

                        <div class="card-header d-flex justify-content-between align-items-center @headerClass">
                            <strong>@item.WaitingResponOrder.NomorService</strong>

                            @if (isGaransi)
                            {
                                <span class="badge bg-white text-danger fw-bold fs-6">GRATIS (Garansi)</span>
                            }
                            else
                            {
                                <span class="badge bg-light text-dark fs-6">@item.TotalHarga.ToString("Rp #,##0")</span>
                            }
                        </div>

                        <div class="card-body text-center">
                            <p class="mb-1 text-muted">Customer:</p>
                            <h5 class="fw-bold">@item.WaitingResponOrder.NamaCustomer</h5>
                            <hr />

                            @if (isGaransi)
                            {
                                <div class="alert alert-danger">
                                    <h4 class="fw-bold"><i class="bi bi-shield-check"></i> KLAIM GARANSI</h4>
                                    <p class="mb-0 small">Perbaikan ulang / komplain (Tidak ada biaya).</p>
                                </div>

                                <div class="bg-light p-3 rounded mb-3 border">
                                    <small class="text-danger fw-bold d-block mb-2">TUGAS TEKNISI:</small>
                                    <span>Pastikan unit sudah diperbaiki dan berfungsi normal.</span>
                                </div>

                                <form asp-action="ConfirmPayment" method="post">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger w-100 btn-lg shadow"
                                            onclick="return confirm('Apakah pekerjaan GARANSI sudah selesai dan unit aman?');">
                                        <i class="bi bi-check-circle-fill"></i> Selesai (Tutup Order)
                                    </button>
                                </form>
                            }

                            else
                            {
                                // KONDISI: BELUM DIPILIH
                                if (item.StatusPembayaran == "Belum Dipilih" || string.IsNullOrEmpty(item.StatusPembayaran))
                                {
                                    <div class="alert alert-warning">
                                        <div class="spinner-grow spinner-grow-sm text-dark mb-2" role="status"></div>
                                        <br />
                                        <strong>Menunggu Pilihan Customer...</strong>
                                        <p class="small mb-0">Harap tunggu customer memilih metode di aplikasinya.</p>
                                    </div>
                                }
                                // KONDISI: CASH
                                else if (item.StatusPembayaran == "Cash")
                                {
                                    <div class="alert alert-success">
                                        <h4 class="fw-bold"><i class="bi bi-cash-stack"></i> TUNAI / CASH</h4>
                                        <p class="mb-0">Customer memilih pembayaran tunai.</p>
                                    </div>

                                    <div class="bg-light p-3 rounded mb-3 border">
                                        <small class="text-danger fw-bold d-block mb-2">TUGAS TEKNISI:</small>
                                        <span>Terima uang sejumlah <strong>@item.TotalHarga.ToString("Rp #,##0")</strong>.</span>
                                    </div>

                                    <form asp-action="ConfirmPayment" method="post">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-success w-100 btn-lg shadow"
                                                onclick="return confirm('Uang tunai sudah diterima?');">
                                            <i class="bi bi-check-circle-fill"></i> Uang Diterima & Lunas
                                        </button>
                                    </form>
                                }
                                // KONDISI: TRANSFER
                                else if (item.StatusPembayaran == "Transfer")
                                {
                                    <div class="alert alert-primary">
                                        <h6 class="fw-bold"><i class="bi bi-bank"></i> TRANSFER BANK</h6>
                                    </div>

                                    <div class="mb-3">
                                        @if (!string.IsNullOrEmpty(item.BuktiPembayaranPath))
                                        {
                                            <p class="small text-muted mb-1">Bukti Transfer Masuk:</p>
                                            <div class="mb-2">
                                                <img src="@item.BuktiPembayaranPath" class="img-fluid rounded border shadow-sm" style="max-height: 200px;" />
                                            </div>
                                            <div class="mb-3">
                                                <a href="@item.BuktiPembayaranPath" target="_blank" class="btn btn-sm btn-outline-secondary">
                                                    <i class="bi bi-zoom-in"></i> Lihat Full
                                                </a>
                                            </div>
                                            <form asp-action="ConfirmPayment" method="post">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-primary w-100 shadow"
                                                        onclick="return confirm('Dana sudah masuk?');">
                                                    <i class="bi bi-check2-all"></i> Validasi Transfer
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <div class="text-muted py-4 border rounded bg-light">
                                                <div class="spinner-border spinner-border-sm text-primary"></div>
                                                <span class="ms-2 small">Menunggu upload bukti...</span>
                                            </div>
                                        }
                                    </div>
                                }
                            }
                        </div>

                        <div class="card-footer text-muted small text-center">
                            Status Order: @item.WaitingResponOrder.Status
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>