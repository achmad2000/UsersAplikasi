@model Pengguna.Models.ServiceLog
@{
    ViewData["Title"] = "Tagihan Saya";
    Layout = "_LayoutCustomer";
    ViewData["ActivePage"] = "DaftarTagihan";
    // Hitung Durasi
    string durasiText = "-";
    if (Model.TimeStart.HasValue && Model.TimeStop.HasValue)
    {
        var diff = Model.TimeStop.Value - Model.TimeStart.Value;
        durasiText = $"{diff.Hours} Jam {diff.Minutes} Menit";
    }
}
<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <div class="card shadow-lg border-0 rounded-3 overflow-hidden">

                <div class="bg-primary text-white text-center py-4">
                    <p class="mb-0 opacity-75 small">Total Tagihan</p>
                    <h1 class="fw-bold display-5">@Model.TotalHarga.ToString("Rp #,##0")</h1>
                </div>

                <div class="card-body px-4 pt-4">

                    <div class="text-center mb-4">
                        <h5 class="fw-bold text-dark mb-1">Nomor Service: @Model.WaitingResponOrder.NomorService</h5>
                        <span class="text-muted small">Teknisi: @Model.WaitingResponOrder.NamaTeknisi</span>
                    </div>

                    <div class="bg-light rounded p-3 mb-4 border border-light">
                        <div class="d-flex justify-content-between align-items-center text-center">

                            <div>
                                <small class="text-muted d-block" style="font-size: 0.75rem;">MULAI SERVICE</small>
                                <span class="fw-bold text-dark">@Model.TimeStart?.ToString("HH:mm")</span>
                            </div>

                            <div class="px-2">
                                <i class="bi bi-arrow-right text-primary"></i>
                                <br />
                                <span class="badge bg-secondary" style="font-size: 0.7rem;">@durasiText</span>
                            </div>

                            <div>
                                <small class="text-muted d-block" style="font-size: 0.75rem;">SELESAI SERVICE</small>
                                <span class="fw-bold text-dark">@Model.TimeStop?.ToString("HH:mm")</span>
                            </div>

                        </div>
                    </div>

                    <hr class="my-4 opacity-25">

                    <h6 class="fw-bold mb-3">Pilih Metode Pembayaran:</h6>

                    <form asp-action="PilihMetodeCash" asp-controller="Customer" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />

                        <button type="submit" class="btn btn-outline-success btn-lg w-100 mb-3 p-3 text-start position-relative d-flex align-items-center"
                                onclick="return confirm('Bayar Tunai ke Teknisi?');">

                            <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                <i class="bi bi-cash-stack fs-4"></i>
                            </div>

                            <div>
                                <span class="d-block fw-bold text-dark">Bayar Tunai (CASH)</span>
                                <small class="text-muted">Bayar langsung ke teknisi</small>
                            </div>

                            <i class="bi bi-chevron-right position-absolute end-0 me-3 text-muted"></i>
                        </button>
                    </form>

                    <button class="btn btn-outline-secondary btn-lg w-100 p-3 text-start position-relative d-flex align-items-center opacity-75" disabled>

                        <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                            <i class="bi bi-bank fs-4"></i>
                        </div>

                        <div>
                            <span class="d-block fw-bold text-dark">Transfer Bank</span>
                            <small class="text-muted">Metode ini belum dibahas</small>
                        </div>

                    </button>

                </div>

                <div class="card-footer bg-light text-center py-3">
                    <small class="text-muted">Mohon selesaikan pembayaran untuk menutup order.</small>
                </div>
            </div>

        </div>
    </div>
</div>