@model Pengguna.Models.SelesaiService
@{
    ViewData["Title"] = "Bukti Pembayaran";
    Layout = "_LayoutCustomer"; 
    ViewData["ActivePage"] = "RiwayatService";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow-lg border-0 rounded-3">

                <div class="card-header bg-success text-white text-center py-4"
                     style="border-bottom-left-radius: 30px; border-bottom-right-radius: 30px;">
                    <i class="bi bi-patch-check-fill" style="font-size: 3.5rem;"></i>
                    <h4 class="fw-bold mt-2">PEMBAYARAN LUNAS</h4>
                    <p class="mb-0 small opacity-75">Terima kasih atas kepercayaan Anda</p>
                </div>

                <div class="card-body px-4 pt-4 pb-2">

                    <div class="row mb-3 align-items-center border-bottom pb-3">
                        <div class="col-6">
                            <small class="text-muted d-block">Tanggal Transaksi</small>
                            <span class="fw-bold text-dark">@(Model.WaktuSelesai?.ToString("dd MMM yyyy, HH:mm") ?? "-")</span>
                        </div>
                        <div class="col-6 text-end">
                            <small class="text-muted d-block">Nomor Service</small>
                            <span class="badge bg-primary fs-6">@Model.NomorService</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12">
                            <small class="text-muted">Nama Customer</small>
                            <div class="fw-bold fs-5">@Model.NamaCustomer</div>
                        </div>
                    </div>

                    <div class="bg-light rounded p-3 mb-4">
                        <table class="table table-borderless table-sm mb-0">
                            <thead>
                                <tr class="text-muted border-bottom">
                                    <th class="ps-0" style="width: 30%;">Jenis Service</th>
                                    <th class="ps-0">Nama Barang/Jasa</th>
                                    <th class="text-center">Jumlah</th>
                                    <th class="text-end pe-0">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    // Kita siapkan list itemnya di luar loop
                                    var items = Model.ItemService.Split(',', StringSplitOptions.RemoveEmptyEntries);
                                }

                                @foreach (var itemRaw in items)
                                {
                                    <tr>
                                        <td class="ps-0 fw-bold text-primary">
                                            @(itemRaw.Contains("|") ? itemRaw.Split('|')[0].Trim() : "-")
                                        </td>

                                        <td class="text-dark">
                                            @(itemRaw.Contains("|") ? itemRaw.Split('|')[1].Trim() : itemRaw.Trim())
                                        </td>

                                        <td class="text-center">1</td>
                                        <td class="text-end pe-0">
                                            <i class="bi bi-check-circle-fill text-success"></i>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="border-top border-secondary border-dashed my-2"></div>

                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="fw-bold text-muted">HARGA TOTAL</span>
                            <span class="fw-bold fs-4 text-success">@Model.TotalBiaya.ToString("Rp #,##0")</span>
                        </div>
                    </div>

                    <div class="alert alert-warning d-flex align-items-start small" role="alert">
                        <i class="bi bi-info-circle-fill me-2 mt-1"></i>
                        <div>
                            Pastikan Anda sudah mendapatkan <strong>Kartu Garansi</strong> dan <strong>Voucher</strong> dari teknisi kami.
                        </div>
                    </div>

                </div>

                <div class="card-footer bg-white border-0 pb-4 px-4 text-center">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("RiwayatService", "Customer")" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-arrow-left"></i> Kembali 
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>