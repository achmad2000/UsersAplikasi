@{
    Layout = "_LayoutCustomer";
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0" style="background-color: #f0f2f5;">
                <div class="card-body p-4">
                    <h3 class="mb-0">Selamat Datang, @Context.Session.GetString("Username")!</h3>
                    <p class="text-muted">Ini adalah ringkasan aktivitas service Anda.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm text-center h-100 border-primary border-3 border-top-0 border-bottom-0 border-end-0">
                <div class="card-body">
                    <h1 class="display-4 text-primary fw-bold">@ViewData["TotalOrders"]</h1>
                    <p class="card-text text-muted fw-semibold">Total Pesanan</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center h-100 border-warning border-3 border-top-0 border-bottom-0 border-end-0">
                <div class="card-body">
                    <h1 class="display-4 text-warning fw-bold">@ViewData["PendingOrders"]</h1>
                    <p class="card-text text-muted fw-semibold">Menunggu Respon</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center h-100 border-success border-3 border-top-0 border-bottom-0 border-end-0">
                <div class="card-body">
                    <h1 class="display-4 text-success fw-bold">@ViewData["ActiveOrders"]</h1>
                    <p class="card-text text-muted fw-semibold">Sedang Aktif</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center h-100 border-danger border-3 border-top-0 border-bottom-0 border-end-0">
                <div class="card-body">
                    <h1 class="display-4 text-danger fw-bold">@ViewData["CanceledOrders"]</h1>
                    <p class="card-text text-muted fw-semibold">Dibatalkan</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column justify-content-center text-center p-4">
                    <h5 class="card-title">Daftar Pesanan Anda</h5>
                    <p class="card-text text-muted">Lihat semua riwayat dan status pesanan service Anda di sini.</p>

                    <a asp-controller="Customer" asp-action="WaitingOrder" class="btn btn-primary btn-lg mt-3">
                        <i class="bi bi-list-ul"></i> Lihat Daftar Pesanan
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column justify-content-center text-center p-4">
                    <h5 class="card-title">Pesan Service Baru</h5>
                    <p class="card-text text-muted">Butuh perbaikan AC, Kulkas, atau Mesin Cuci? Pesan sekarang.</p>
                    <a asp-controller="Customer" asp-action="Order" class="btn btn-success btn-lg mt-3">
                        <i class="bi bi-plus-circle"></i> Buat Pesanan Baru
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>