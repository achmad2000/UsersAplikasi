@model IEnumerable<Pengguna.Models.SelesaiService>
@{
    ViewData["Title"] = "Riwayat Service";
    Layout = "_LayoutCustomer";
    ViewData["ActivePage"] = "RiwayatService";
}

<div class="container mt-4 mb-5">
    
    <div class="text-center mb-4">
        <h3><i class="bi bi-clock-history"></i> Riwayat Transaksi</h3>
        <p class="text-muted">Daftar service yang telah selesai dan lunas.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            
            @if (!Model.Any())
            {
                    <div class="alert alert-light text-center border shadow-sm py-5">
                        <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                        <p class="mt-3 text-muted">Belum ada riwayat service yang selesai.</p>
                    </div>
            }
            else
            {
                    @foreach (var item in Model)
                    {
                            <div class="card shadow-sm mb-3 border-start border-4 border-success hover-shadow">
                                <div class="card-body d-flex justify-content-between align-items-center">
                            
                                    <div>
                                        <div class="d-flex align-items-center mb-1">
                                            <h5 class="fw-bold mb-0 me-2">@item.NomorService</h5>
                                            <span class="badge bg-success bg-opacity-10 text-success border border-success px-2" style="font-size: 0.7rem;">
                                                LUNAS
                                            </span>
                                        </div>
                                
                                        <div class="text-muted small">
                                            <i class="bi bi-calendar-check me-1"></i> 
                                            @(item.WaktuSelesai?.ToString("dd MMM yyyy, HH:mm") ?? "-")
                                        </div>
                                        <div class="text-muted small mt-1">
                                            Teknisi: @item.NamaTeknisi
                                        </div>
                                    </div>

                                    <div class="text-end ms-2">
                                        <a href="@Url.Action("StrukLunas", "Customer", new { nomor = item.NomorService })" 
                                           class="btn btn-sm btn-outline-success rounded-pill px-3">
                                            <i class="bi bi-receipt"></i> Lihat Struk
                                        </a>
                                    </div>

                                </div>
                            </div>
                    }
            }
        </div>
    </div>
</div>